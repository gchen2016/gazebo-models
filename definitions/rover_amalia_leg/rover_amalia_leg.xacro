<?xml version="1.0" ?>
<robot name="rover_amalia_leg" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="rover_amalia_leg" params="prefix reflect_xz reflect_yz bar_length bar_radius wheel_radius wheel_length">
    <link name="leg_bar_${prefix}">
    <collision name="leg_bar_${prefix}_bar_collision">
      <pose>${0.177943*reflect_yz} ${(-0.19)*reflect_xz} -0.0987583 0 ${(-0.5)*reflect_yz} 0</pose>
      <geometry>
        <cylinder>
          <length>${bar_length}</length>
          <radius>${bar_radius}</radius>
        </cylinder>
      </geometry>
      <max_contacts>10</max_contacts>
      <surface>
        <contact>
          <ode/>
        </contact>
        <bounce/>
        <friction>
          <ode/>
        </friction>
      </surface>
    </collision>
    <visual name="leg_bar_${prefix}_bar_visual">
      <pose>${0.177943*reflect_yz} ${(-0.19)*reflect_xz} -0.0987583 0 ${(-0.5)*reflect_yz} 0</pose>
      <geometry>
        <cylinder>
          <length>${bar_length}</length>
          <radius>${bar_radius}</radius>
        </cylinder>
      </geometry>
    </visual>
  </link>
  <link name="leg_wheel_${prefix}">
    <pose>${0.225885*reflect_yz} ${(-0.205)*reflect_xz} -0.186517 0 ${(-0.5)*reflect_yz} 0</pose>
    <inertial>
      <pose>0 0 0 0 -0 0</pose>
      <mass>1</mass>
      <inertia>
        <ixx>100</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>100</iyy>
        <iyz>0</iyz>
        <izz>100</izz>
      </inertia>
    </inertial>
    <collision name="leg_wheel_${prefix}_collision">
      <pose>0 ${(-0.035)*reflect_xz} 0 1.57 -0 0</pose>
      <geometry>
        <cylinder>
          <length>${wheel_length}</length>
          <radius>${wheel_radius}</radius>
        </cylinder>
      </geometry>
      <max_contacts>10</max_contacts>
      <surface>
        <contact>
          <ode/>
        </contact>
        <bounce/>
        <friction>
          <ode/>
        </friction>
      </surface>
    </collision>
    <visual name="leg_wheel_${prefix}_visual">
      <pose>0 ${(-0.035)*reflect_xz} 0 1.57 -0 0</pose>
      <geometry>
        <cylinder>
          <length>${wheel_length}</length>
          <radius>${wheel_radius}</radius>
        </cylinder>
      </geometry>
    </visual>
    <velocity_decay>
      <linear>0</linear>
      <angular>0</angular>
    </velocity_decay>
    <self_collide>0</self_collide>
    <kinematic>0</kinematic>
    <gravity>1</gravity>
  </link>
  <joint name="leg_shaft_${prefix}" type="revolute">
    <child>leg_wheel_${prefix}</child>
    <parent>leg_bar_${prefix}</parent>
    <axis>
      <xyz>0 1 0</xyz>
      <limit>
        <lower>-1e+16</lower>
        <upper>1e+16</upper>
      </limit>
      <dynamics/>
      <use_parent_model_frame>1</use_parent_model_frame>
    </axis>
  </joint>
  </xacro:macro>
</robot> 
